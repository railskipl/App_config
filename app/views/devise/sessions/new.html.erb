<div class="wrapper-content2">
  <div class="content2">
      <div class="login">
          <h1>Login to Admin</h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            
            <p>
              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, placeholder: "Username or Email"%>
              </div>
            </p>

            <p>
              <div class="field">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
              </div>              
            </p>

            <p class="remember_me">
              <label>
              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <%end%>
              </label>
            </p>


            <p class="submit"> 
                <%= f.submit "Log in" %>
            </p>
 <%end%>
<%= render "devise/shared/links" %>
        </div>
    </div>
</div>
